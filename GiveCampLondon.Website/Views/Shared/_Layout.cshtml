<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/default.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    @RenderSection("headInclude", false)
</head>
<body>
    <div id="siteWrapper">
        <div id="header">
            <div id="logo">
                <a href="/">
                    <h2>
                        Coding For Charity</h2>
                </a>
                <h3>
                    London</h3>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menu">
                <ul>
                    <li id="navHome">@Html.ActionLink("Home", "Index", "Home", new { area = String.Empty }, null)</li>
                    <li id="navVolunteer">@Html.ActionLink("Volunteer", "Index", "Volunteer", new { area = String.Empty }, null)</li>
                    <li id="navCharity">@Html.ActionLink("Charity", "Index", "Charity", new { area = String.Empty }, null)</li>
                    <li id="navAbout">@Html.ActionLink("About", "About", "Home", new { area = String.Empty }, null)</li>
                    <li id="navAbout">@Html.ActionLink("FAQ", "Faq", "Home", new { area = String.Empty }, null)</li>
                    @if (ViewBag.IsAdministrator != null && ViewBag.IsAdministrator)
                    {
                        <li id="navAdmin">@Html.ActionLink("Admin Control Panel", "ControlPanel", "Admin", new { area = String.Empty }, null)</li>
                    }
                </ul>
            </div>
        </div>
        <div id="page">
            <div id="content">
                @RenderBody()
            </div>
            <div id="sidebar">
                @RenderSection("sidebar", false)
                @if (ViewBag.SiteSetting != null && !string.IsNullOrEmpty((ViewBag.SiteSetting as Setting).TwitterTag))
                { 
                    <script src="http://widgets.twimg.com/j/2/widget.js"></script>
                    <script>
                        new TWTR.Widget({
                            version: 2,
                            type: 'profile',
                            rpp: 4,
                            interval: 6000,
                            width: 200,
                            height: 300,
                            theme: {
                                shell: {
                                    background: '#333333',
                                    color: '#ffffff'
                                },
                                tweets: {
                                    background: '#000000',
                                    color: '#ffffff',
                                    links: '#4aed05'
                                }
                            },
                            features: {
                                scrollbar: false,
                                loop: false,
                                live: true,
                                hashtags: true,
                                timestamp: true,
                                avatars: false,
                                behavior: 'all'
                            }
                        }).render().setUser('@ViewBag.SiteSetting.TwitterTag').start();
                    </script>
                 
                }
            </div>
            <p style="clear: both;">
                &nbsp;</p>
        </div>
        <div id="footer">
            <p>
                The Give Camp Starter Kit</p>
        </div>
    </div>
</body>
</html>
