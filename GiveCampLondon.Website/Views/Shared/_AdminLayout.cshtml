<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/content/admintemplate.css")" type="text/css" media="screen" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
    @RenderSection("headInclude", false)
</head>
<body>
    <div id="wrapper">
        <div id="header" class="clearfix">
            <div id="logo">
                <a href="/">Give Camp UK</a></div>
            <div id="header-items" class="clearfix">
                <div id="social-channels" class="clearfix">
                    <ul>
                        <li class="facebook"><a href="http://www.facebook.com/givecampuk" target="_blank">Find
                            Give Camp on Facebook - facebook.com/givecamp</a></li>
                        <li class="twitter"><a href="http://twitter.com/givecampuk" target="_blank">Follow us
                            on Twitter - http://www.twitter.com/givecampuk</a></li>
                    </ul>
                </div>
                <div id="breadcrumbs" class="clear clearfix">
                </div>
            </div>
        </div>
        <div id="main-navigation-wrapper">
            <div id="main-navigation" class="clearfix">
                <dl>
                    <dd><a href="@Url.Action("index", "home")">Home</a></dd>
                    <dd><a href="@Url.Action("index", "volunteer")">Volunteer</a></dd>
                    <dd><a href="@Url.Action("index", "charity")">Charity</a></dd>
                    <dd><a href="@Url.Action("index", "sponsors")">Sponsors</a></dd>
                    <dd><a href="/faq">FAQ</a></dd>
                    <dd><a href="@Url.Action("schedule", "home")">Schedule</a></dd>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <dd><a href="@Url.Action("ControlPanel", "admin")">Admin Control Panel</a></dd>
                        <dd><a href="@Url.Action("LogOff", "account")">Logout</a></dd>
                    }
                </dl>
            </div>
        </div>
        <div id="column-full-width">
            <div class="article">
                @RenderBody()
            </div>
        </div>
        <div id="footer" class="clear">
            <div id="footer-divider">
                <span id="copyright">&copy; Copyright Give Camp 2011. All rights reserved.</span>
                <dl id="footer-navigation">
                    <dd><a href="@Url.Action("contact-us", "home")">Contact Us</a></dd>
                </dl>
            </div>
        </div>
    </div>
</body>
</html>
