@model Sponsor
@{
    ViewBag.Title = "Add New Sponsor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h1>Add New Sponsor</h1>
<br />
<br />
<div style="padding-left: 10px; padding-right: 10px;">
@using (Html.BeginForm("AddSponsor", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="editor-label">
        <label for="SponsorName">
            @Html.LabelFor(m => m.Name)
        </label>
        <span>* Required</span>
    </div>	
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Name, new { required = "required" })
    </div>
    
    <div class="editor-label">
        <label for="Blurb">
            @Html.LabelFor(m => m.Blurb)
        </label>
        <span>* Required</span>
    </div>	
    <div class="editor-field">
        @Html.TextAreaFor(m => m.Blurb, new { required = "required" })
    </div>
    
    <div class="editor-label">
        <label for="MainLogo">Banner for Left Hand Panel </label>
        <span>* Required</span>
    </div>	
    <div class="editor-field">
        <input type="file" name="mainLogo" />

        @*@Html.TextAreaFor(m => m.MainLogo, new { required = "required" })*@
    </div>
    
    <div class="editor-label">
        <label for="SmallLogo">Banner for Sponsors Page</label>
        <span>* Required</span>
    </div>	
    <div class="editor-field">
    <input type="file" name="smallLogo" />
        @*@Html.TextAreaFor(m => m.SmallLogo, new { required = "required" })*@
    </div>
    
    <div class="editor-label">
        <label for="Link">@Html.LabelFor(m => m.Link)</label>
        <span>* Required</span>
    </div>	
    <div class="editor-field">
        http://@Html.TextBoxFor(m => m.Link, new { required = "required" })
    </div>
    
    <input type="submit" value="Save Sponsor" />
}
    <br />
    <br />
    @Html.ActionLink("Return To Admin Home", "ControlPanel")
    <br />
</div>
